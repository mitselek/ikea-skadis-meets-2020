{
  "manifest_version": 3,
  "name": "SKÅDIS Outreach Helper",
  "version": "0.1",
  "description": "Simple helper for SKÅDIS community outreach",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "content_scripts": [{
    "matches": ["*://makerworld.com/*"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SKÅDIS Outreach"
  }
}
